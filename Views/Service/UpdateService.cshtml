
@model UpdateServiceViewModel

@{
    ViewData["Title"] = "UpdateService";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper">
    <div class="content">
        <div class="container-fluid">
            <div class="card h-100">
                <div class="card-header pb-0 p-3">
                    <div class="row">
                        <div class="col-md-8 d-flex align-items-center">
                            <h6 class="mb-0 text-dark">Hizmet Düzenleme Ekranı</h6>
                        </div>
                    </div>
                </div>
                <div class="card-body p-3">
                    <hr class="horizontal gray-light my-0">
                    <form method="post" asp-controller="Service" asp-action="UpdateService">
                        <input type="hidden" asp-for="ServiceId">
                        <div class="form-group">
                            <label>Başlık</label>
                            <input type="text" class="form-control form-control-s" asp-for="Title" placeholder="Başlık girin">
                        </div>
                        <div class="form-group">
                            <label>Açıklama</label>
                            <input type="text" class="form-control form-control-s" asp-for="Description" placeholder="Açıklama girin">
                        </div>
                        <div class="form-group">
                            <label>Icon</label>
                            <input type="text" class="form-control form-control-s" asp-for="ServiceIcon" placeholder="Ikonu Url girin">
                        </div>
                        <button type="submit" class="btn btn-primary">Servis Düzenle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
