@model SendMessageViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

@await Component.InvokeAsync("_UIFeatureComponentPartial")

@await Component.InvokeAsync("_UIAboutComponentPartial")

@await Component.InvokeAsync("_UIServiceComponentPartial")

@await Component.InvokeAsync("_UIProjectComponentPartial")

@await Component.InvokeAsync("_UIInfoComponentPartial")

@await Component.InvokeAsync("_UITestimonialComponentPartial")


<section class="section" id="contact">
    <div class="container text-center">
        <p class="section-subtitle">Bizimle İletişime Geçin..</p>
        <h6 class="section-title mb-5">Hemen Mesaj Gönder</h6>
        <form id="formMessage" method="post" class="contact-form col-md-10 col-lg-8 m-auto">
            <div class="form-row">
                <div class="form-group col-sm-6">
                    <input type="text" size="50" class="form-control" placeholder="İsminiz" asp-for="NameSurname" required>
                </div>
                <div class="form-group col-sm-6">
                    <input type="email" class="form-control" placeholder="Mail Adresiniz" asp-for="Email" requried>
                </div>
                <div class="form-group col-sm-12">
                    <textarea id="comment" rows="6" class="form-control" placeholder="Mesajınız" asp-for="Message" required></textarea>
                </div>
                <div class="form-group col-sm-12 mt-3">
                    <button type="submit" id="submitBtn" class="btn btn-outline-primary rounded"> Mesaj Gönder</button>
                </div>
            </div>
        </form>
    </div>
</section>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    document.getElementById('formMessage').addEventListener('submit', function (e) {
        e.preventDefault(); // Formun varsayılan submit işlemini engelle

        // SweetAlert2 kullanarak başarılı bildirimi göster
        Swal.fire({
            position: "top-end",
            icon: "success",
            title: "Mesaj gönderildi",
            showConfirmButton: false,
            timer: 1200
        });

        // Formu submit et
        this.submit();
    });
</script>
