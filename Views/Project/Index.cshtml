
@model List<TblProject>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}


<div class="content-wrapper">
    <div class="content">
        <div class="container-fluid">
            <br />
            <h4 class="page-title">Projeler Kısmı</h4>
            <br />
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Proje Bilgileri</div>
                        </div>
                        <div class="card-body">
                            <div class="card-sub">
                                Projeler kısmını bu sayfada güncelleyebilirsiniz.
                            </div>
                            <table class="table mt-3">
                                <thead>
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Başlık</th>
                                        <th scope="col">Açıklama</th>
                                        <th scope="col">Proje Resmi Url</th>
                                        <th scope="col">Proje Url</th>
                                        <th scope="col">Sil</th>
                                        <th scope="col">Güncelle</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <td>@count</td>
                                            <td>@item.Title</td>
                                            <td>@item.Description</td>
                                            <td>@item.ImageUrl</td>
                                            <td>@item.ProjectUrl</td>
                                            <td><a href="/Project/DeleteProject/@item.ProjectId" class="btn btn-danger ">Sil</a></td>
                                            <td><a href="/Project/UpdateProject/@item.ProjectId" class="btn btn-warning">Güncelle</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <a href="/Project/CreateProject/" class="btn btn-primary">Yeni Proje Oluşturun</a>
                </div>
            </div>
        </div>
    </div>
</div>
