@model List<TblTestimonial>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div class="content-wrapper">
    <div class="content">
        <div class="container-fluid">
            <br />
            <h4 class="page-title">Yorumlar Kısmı</h4>
            <br />
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yorum Bilgileri</div>
                        </div>
                        <div class="card-body">
                            <div class="card-sub">
                                Yorum kısmını bu sayfada güncelleyebilirsiniz.
                            </div>
                            <table class="table mt-3">
                                <thead>
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Ad Soyad</th>
                                        <th scope="col">Açıklama</th>
                                        <th scope="col">Resmi Url</th>
                                        <th scope="col">Durum</th>
                                        <th scope="col">Sil</th>
                                        <th scope="col">Güncelle</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <td>@count</td>
                                            <td>@item.NameSurname</td>
                                            <td>@item.Description</td>
                                            <td>@item.ImageUrl</td>
                                            @if (item.Status == true)
                                            {
                                                <td>
                                                    <a href="/Testimonial/ChangeToFalse/@item.TestimonialId" class="btn btn-toggle bg-gradient-warning">Pasif Yap</a>
                                                </td>
                                            }
                                            else
                                            {
                                                <td>
                                                    <a href="/Testimonial/ChangeToTrue/@item.TestimonialId" class="btn btn-toggle bg-gradient-info">Aktif Yap</a>
                                                </td>
                                            }
                                            <td><a href="/Testimonial/DeleteTestimonial/@item.TestimonialId" class="btn btn-danger ">Sil</a></td>
                                            <td><a href="/Testimonial/UpdateTestimonial/@item.TestimonialId" class="btn btn-success">Güncelle</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <a href="/Testimonial/CreateTestimonial/" class="btn btn-primary">Yeni Proje Oluşturun</a>
                </div>
            </div>
        </div>
    </div>
</div>